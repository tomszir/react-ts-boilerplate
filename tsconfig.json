{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
